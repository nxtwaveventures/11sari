<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 800 1200">
  <defs>
    <pattern id="heritage-pattern" x="0" y="0" width="150" height="150" patternUnits="userSpaceOnUse">
      <rect width="150" height="150" fill="#2F4F4F"/>
      <circle cx="75" cy="75" r="25" fill="#B8860B" opacity="0.4"/>
      <path d="M25,25 Q75,10 125,25 Q110,75 75,60 Q40,75 25,25" fill="#B8860B" opacity="0.3"/>
      <rect x="65" y="65" width="20" height="20" fill="#B8860B" opacity="0.5" transform="rotate(30 75 75)"/>
    </pattern>
    <linearGradient id="heritage-overlay" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#2F4F4F;stop-opacity:0.8"/>
      <stop offset="50%" style="stop-color:#4682B4;stop-opacity:0.6"/>
      <stop offset="100%" style="stop-color:#2F4F4F;stop-opacity:0.9"/>
    </linearGradient>
  </defs>
  
  <!-- Base Pattern -->
  <rect width="100%" height="100%" fill="url(#heritage-pattern)"/>
  
  <!-- Heritage Overlay -->
  <rect width="100%" height="100%" fill="url(#heritage-overlay)"/>
  
  <!-- Heritage Motifs -->
  <g opacity="0.3">
    <circle cx="150" cy="250" r="70" fill="none" stroke="#B8860B" stroke-width="2"/>
    <circle cx="650" cy="700" r="50" fill="none" stroke="#B8860B" stroke-width="1.5"/>
    <path d="M250,500 Q350,450 450,500 Q400,600 350,550 Q300,600 250,500" fill="#B8860B" opacity="0.4"/>
    <rect x="500" y="300" width="60" height="60" fill="none" stroke="#B8860B" stroke-width="2" transform="rotate(45 530 330)"/>
  </g>
  
  <!-- Traditional Patterns -->
  <g opacity="0.2">
    <path d="M100,100 L200,100 L150,200 Z" fill="#B8860B"/>
    <path d="M600,900 L700,900 L650,1000 Z" fill="#B8860B"/>
    <circle cx="400" cy="200" r="15" fill="#B8860B"/>
    <circle cx="300" cy="800" r="20" fill="#B8860B"/>
  </g>
  
  <!-- Texture Lines -->
  <g opacity="0.15">
    <line x1="0" y1="150" x2="800" y2="150" stroke="#B8860B" stroke-width="1"/>
    <line x1="0" y1="350" x2="800" y2="350" stroke="#B8860B" stroke-width="1"/>
    <line x1="0" y1="550" x2="800" y2="550" stroke="#B8860B" stroke-width="1"/>
    <line x1="0" y1="750" x2="800" y2="750" stroke="#B8860B" stroke-width="1"/>
    <line x1="0" y1="950" x2="800" y2="950" stroke="#B8860B" stroke-width="1"/>
  </g>
</svg>
