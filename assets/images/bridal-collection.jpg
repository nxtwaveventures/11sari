<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 800 1200">
  <defs>
    <pattern id="bridal-pattern" x="0" y="0" width="200" height="200" patternUnits="userSpaceOnUse">
      <rect width="200" height="200" fill="#8B0000"/>
      <circle cx="100" cy="100" r="30" fill="#FFD700" opacity="0.3"/>
      <path d="M50,50 Q100,30 150,50 Q130,100 100,80 Q70,100 50,50" fill="#FFD700" opacity="0.2"/>
      <rect x="90" y="90" width="20" height="20" fill="#FFD700" opacity="0.4" transform="rotate(45 100 100)"/>
    </pattern>
    <linearGradient id="bridal-overlay" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#8B0000;stop-opacity:0.7"/>
      <stop offset="50%" style="stop-color:#B22222;stop-opacity:0.5"/>
      <stop offset="100%" style="stop-color:#8B0000;stop-opacity:0.8"/>
    </linearGradient>
  </defs>
  
  <!-- Base Pattern -->
  <rect width="100%" height="100%" fill="url(#bridal-pattern)"/>
  
  <!-- Elegant Overlay -->
  <rect width="100%" height="100%" fill="url(#bridal-overlay)"/>
  
  <!-- Bridal Motifs -->
  <g opacity="0.2">
    <circle cx="200" cy="300" r="80" fill="none" stroke="#FFD700" stroke-width="2"/>
    <circle cx="600" cy="800" r="60" fill="none" stroke="#FFD700" stroke-width="1.5"/>
    <path d="M300,600 Q400,550 500,600 Q450,700 400,650 Q350,700 300,600" fill="#FFD700" opacity="0.3"/>
  </g>
  
  <!-- Texture Lines -->
  <g opacity="0.1">
    <line x1="0" y1="200" x2="800" y2="200" stroke="#FFD700" stroke-width="1"/>
    <line x1="0" y1="400" x2="800" y2="400" stroke="#FFD700" stroke-width="1"/>
    <line x1="0" y1="600" x2="800" y2="600" stroke="#FFD700" stroke-width="1"/>
    <line x1="0" y1="800" x2="800" y2="800" stroke="#FFD700" stroke-width="1"/>
    <line x1="0" y1="1000" x2="800" y2="1000" stroke="#FFD700" stroke-width="1"/>
  </g>
</svg>
